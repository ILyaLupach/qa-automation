{
  "compilerOptions": {
    "sourceMap": false,
    "target": "es2019",
    "module": "commonjs",
    "removeComments": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "types": [
      "node",
      "webdriverio/async",
      "@wdio/mocha-framework",
      "expect-webdriverio",
      "./types/wdio"
    ]
  },
  "include": [
    "./test/**/*.ts",
    "./src/types/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./test/**/*.js"
  ],
}
